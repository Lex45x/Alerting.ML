<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Alerting.ML.App.Components.Overview"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Alerting.ML.App.Components.Overview.TrainingCard"
             x:DataType="vm:TrainingCardViewModel">
    <Design.DataContext>
        <vm:TrainingCardViewModelDesignTime />
    </Design.DataContext>
    <Border Padding="24" CornerRadius="12" Classes="card">
        <StackPanel Spacing="16">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border Padding="8"
                            CornerRadius="8"
                            VerticalAlignment="Top" Background="{StaticResource Color.Pill}">
                        <Svg Path="../../Assets/azure-icon.svg" />
                    </Border>
                    <StackPanel Spacing="2">
                        <TextBlock Classes="h3" Text="{Binding TrainingSessionName}" />
                        <TextBlock Classes="p" Text="{Binding TrainingDate}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <StackPanel Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock FontSize="{StaticResource Text.3Xl}" Text="{Binding HighestScore}" VerticalAlignment="Bottom"/>
                    <TextBlock Classes="P" Text="Best Score" VerticalAlignment="Bottom"/>
                </StackPanel>
                <ProgressBar Minimum="0" Maximum="1" Value="{Binding LatestProgress}" />
            </StackPanel>
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Classes="P"  Text="{Binding GenerationsCounter, StringFormat='Generations: {0}'}" />
                <TextBlock Grid.Column="1" Classes="P"  Text="{Binding LatestProgress, StringFormat='\{0:P\}'}" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>